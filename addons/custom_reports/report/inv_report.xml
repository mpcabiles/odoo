<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_inv_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <h2>Inventory Report</h2>
                        <p><t t-esc="beg_date"/> - <t t-esc="end_date"/></p>
                    </div>
                    <table class="table table-sm">
                        <thead><tr>
                            <th class="text-center">Product</th>
                            <th class="text-center">Beginning Inventory</th>
                            <th class="text-center">Purchased</th>
                            <th class="text-center">Sold</th>
                            <th class="text-center">Adjustments</th>
                            <th class="text-center">Ending Inventory</th>
                        </tr></thead>
                        <tbody><tr t-foreach='lines' t-as='p'>
                            <td class="text-center"><t t-esc="p.get('prod_name')"/></td>
                            <td class="text-center"><t t-esc="p.get('beg_qty')"/></td>
                            <td class="text-center"><t t-esc="p.get('in_qty')"/></td>
                            <td class="text-center"><t t-esc="p.get('out_qty')"/></td>
                            <td class="text-center"><t t-esc="p.get('adj_qty')"/></td>
                            <td class="text-center"><t t-esc="p.get('end_qty')"/></td>
                        </tr></tbody>
                    </table>
                </div>
            </t>
            <footer>
                <div style="text-align:right;">Generated by Ant POS</div>
            </footer>
        </t>
    </template>
</odoo>